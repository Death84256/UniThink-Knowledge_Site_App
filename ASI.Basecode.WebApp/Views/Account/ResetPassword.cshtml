@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password Page";
}
@section styles{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
}
<div class="AccountVerification p-5" style="background: linear-gradient(238deg, rgba(30, 113, 16, 0.80) 12.82%, rgba(88, 202, 69, 0.76) 100%);">
    <section class="d-flex p-5">
        <section class="container ps-5 pe-5 pb-3 border w-75" style="background: #F5F5F5;">
            <section class="row">
                <section class="col-5"></section>
                <section class="col">
                    <img class="me-0" width="150" height="150" src="~/img/Uni-Think-Logo.svg" alt="" style="margin-left: auto; display: block;" />
                </section>
                <form>
                    <section class="row pt-3 pb-4">
                        <input class="border p-3" type="text" id="verificationCode" placeholder="New Password:" />
                    </section>
                    <section class="row pt-3 pb-4">
                        <input class="border p-3" type="text" id="verificationCode" placeholder="Confirm Password:" />
                    </section>
                    <section class="row pt-5 pb-4">
                        <input class="btn btn-success w-100 p-2" type="submit" id="submit" value="Submit" style="background: #1E7110" />
                    </section>
                </form>
            </section>
        </section>
    </section>
</div>