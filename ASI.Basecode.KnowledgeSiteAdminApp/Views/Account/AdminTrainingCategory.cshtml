@{
    ViewData["Title"] = "Training Cateogry";
}
<div class="min-vh-100" style="background: linear-gradient(238deg, rgba(30, 113, 16, 0.80) 12.82%, rgba(88, 202, 69, 0.76) 100%);">
    <div class="container pb-5">
        <section class="row d-flex">
            <section class="col d-flex justify-content-start">
                <img src="~/img/123.svg" class="img-fluid d-flex justify-content-bottom pt-5" style="height: 177px;"/>
            </section>
            <section class="col d-flex justify-content-end align-items-center">
                <img class="d-flex align-items-center" src="~/img/profileCircleBlack.svg"/>
            </section>
        </section>
        @* content *@
        <div class="container border" style="background: #F5F5F5;">
            <section class="p-3">
                @* arrow *@
                <section class="row d-flex align-items-center">
                    <section class="col-1 d-flex justify-content-start align-items-center">
                        <a class="text-dark" asp-controller="Home" asp-action="Index"><i class="fs-3 fa fa-arrow-left"></i></a>
                    </section>
                    <section class="col-4 d-flex justify-content-start">
                        <section class="d-flex align-items-center">
                            <h4 class="fw-normal d-flex">Training Category</h4>
                        </section>
                    </section>
                    <section class="col d-flex justify-content-end">
                        <!-- Search bar with icon on the left -->
                        <div class="row d-flex align-items-center search-container-dwieght border rounded-0">
                            <section class="col">
                                <input class="border-0 p-2 search-input-dwieght" type="text" placeholder="Search" style="background:#F5F5F5 !important;">
                            </section>
                            <section class="col">
                                <div class="search-icon-dwieght d-flex align-items-center">
                                    <i class="fs-3 fa fa-search"></i>
                                </div>
                            </section>
                        </div>
                    </section>
                    @* add button *@
                    <section class="col-2 d-flex justify-content-end align-items-center">
                        <input onclick="openModal()" class="p-2 rounded-2 border btn btn-success w-75" type="button" name="btnAdd" value="add" />
                    </section>
                </section>
                @* start row content *@
                <section class="pt-3">
                    <section class="border border-dark p-5 d-flex">
                        <section class="col">
                            <section class="rounded-2 p-2 pb-0"style="background: rgba(254, 134, 142, 0.68);">
                                <a href="#" class="text-decoration-none text-dark">
                                    <section class="row d-flex align-items-center">
                                        <section class="d-flex justify-content-center align-items-center">
                                            <img src="~/img/programmingLanguageimg.svg" class="img-fluid" style="width: 453px; height: 277px;"/>
                                        </section>
                                    </section>
                                    <section class="row bottom-0 rounded-4 bg-white border d-flex"style="border: 1px solid #BE001E !important;">
                                        <section class="d-flex align-items-center justify-content-center p-3">
                                            <h4>Programming Languages</h4>
                                        </section>
                                    </section>
                                    </a>
                            </section>
                        </section>
                        <span class="px-4"></span>
                        @* 2nd col content *@
                        <section class="col">
                            <section class="rounded-2 p-2 pb-0"style="background: rgba(151, 254, 134, 0.68);">
                                <a href="#" class="text-decoration-none text-dark">
                                    <section class="row d-flex align-items-center">
                                        <section class="d-flex justify-content-center align-items-center">
                                            <img src="~/img/cloudTechnology.svg" class="img-fluid" style="width: 453px; height: 277px;"/>
                                        </section>
                                    </section>
                                    <section class="row bottom-0 rounded-4 bg-white border d-flex"style="border: 1px solid #1E7110 !important;">
                                        <section class="d-flex align-items-center justify-content-center p-3">
                                            <h4>Cloud Technology</h4>
                                        </section>
                                    </section>
                                    </a>
                            </section>
                        </section>
                    </section>
                </section>
            </section>
        </div>
    </div>
</div>
