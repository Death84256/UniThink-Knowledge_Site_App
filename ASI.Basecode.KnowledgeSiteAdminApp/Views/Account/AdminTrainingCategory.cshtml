@{
    ViewData["Title"] = "Training Cateogry";
}
<div class="min-vh-100" style="background: linear-gradient(238deg, rgba(30, 113, 16, 0.80) 12.82%, rgba(88, 202, 69, 0.76) 100%);">
        @* Header *@
        <section class="row d-flex bg-light px-4 mb-5">
            <section class="col d-flex">
                <section class=" d-flex justfiy-content-start align-items-center">
                    <img class="m-2" width="70" height="60" src="~/img/Unilogo.png" alt="" /><span class="fs-2 pt-4">Unithink</span>
                </section>
            </section>
            <section class="col d-flex justify-content-end">
                <section class="d-flex justify-content-end align-items-center">
                    <img class="me-0" width="50" height="50" src="~/img/dashboardProfile.svg" alt="" style="margin-left: auto; display: block;" />
                </section>
            </section>
        </section>
        <section class="container border rounded-2" style="background: #F5F5F5; height: 550px;">
            <section class="p-3">
                @* arrow *@
                <section class="row d-flex align-items-center">
                    <section class="col-1 d-flex justify-content-start align-items-center">
                        <a class="text-dark" asp-controller="Home" asp-action="Index"><i class="fs-6 fa fa-arrow-left"></i></a>
                    </section>
                    <section class="col-4 d-flex justify-content-start">
                        <section class="d-flex align-items-center">
                        <h5 class="fw-normal d-flex pt-2">Training Category</h5>
                        </section>
                    </section>
                    <section class="col d-flex justify-content-end">
                        <!-- Search bar with icon on the left -->
                        <div class="row d-flex align-items-center search-container-dwieght border rounded-0">
                            <section class="col">
                                <input class="border-0 p-2 search-input-dwieght" type="text" placeholder="Search" style="background:#F5F5F5 !important;">
                            </section>
                            <section class="col">
                                <div class="search-icon-dwieght d-flex align-items-center">
                                    <i class="fs-3 fa fa-search"></i>
                                </div>
                            </section>
                        </div>
                    </section>
                    @* add button *@
                    <section class="col-2 d-flex justify-content-end align-items-center">
                        <input onclick="openModal()" class="p-2 rounded-2 border btn btn-success w-75" type="button" name="btnAdd" value="add" />
                    </section>
                </section>
                @* start row content *@
                <section class="pt-3">
                    <section class="row d-flex justify-content-start border border-dark p-3 rounded-2" style="max-height: 450px; height: 450px; width: 102%; overflow-y: scroll;">
                        <section class="col-1 rounded-2 m-1 pb-0" style="background: rgba(254, 134, 142, 0.68); height:200px; width:300px;">
                            <a asp-action="ViewListofTraining" asp-controller="Account" class="text-decoration-none text-dark">
                                <section class="row d-flex align-items-center">
                                    <section class="d-flex justify-content-center align-items-center">
                                        <img src="~/img/programmingLanguageimg.svg" class="w-75 h-75" />
                                    </section>
                                </section>
                                <section class="row bottom-0 rounded-4 bg-white border d-flex" style="border: 1px solid #BE001E !important;">
                                    <section class="d-flex align-items-center justify-content-center p-3">
                                        <h6>Programming Languages</h6>
                                    </section>
                                </section>
                            </a>
                        </section>
                    </section>
                </section>
            </section>
        </section>
</div>
