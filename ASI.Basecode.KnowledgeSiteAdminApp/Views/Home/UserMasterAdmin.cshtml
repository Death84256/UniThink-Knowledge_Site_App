@model List<ASI.Basecode.Services.ServiceModels.UserViewModel>


@{
    ViewData["Title"] = "User Master Screen";
}
<body style="background: linear-gradient(238deg, rgba(30, 113, 16, 0.80) 15.81%, rgba(88, 202, 69, 0.76) 100%);">
    @* First Row *@
    <div class="bg-light px-5 pt-0" style="box-shadow: 47px 4px 50px -5px #000;">
        <section class="row d-flex">
            <section class="col d-flex">
                <section class=" d-flex justfiy-content-start align-items-center">
                    <img class="my-3" width="100" height="80" src="~/img/logo.png" alt="" />
                    <span class="fs-1 pt-4 ms-2">UniThink</span>
                </section>
            </section>
            <section class="col d-flex justify-content-end">
                <section class="d-flex justify-content-end align-items-center">
                    <img class="me-0" width="60" height="60" src="~/img/dashboardProfile.svg" alt="" style="margin-left: auto; display: block;" />
                </section>
            </section>
        </section>
    </div>
    
    @* content *@
    <div class="container border rounded-2 mt-5" style="background: #F5F5F5; height:680px;">
        <section class="p-3">
            @* arrow *@
            <section class="row d-flex align-items-center">
                <section class="col d-flex justify-content-start">
                    <a class="text-dark" asp-controller="Home" asp-action="Index"><i class="fs-4 fa fa-arrow-left fs-6"></i></a>
                    <section class="col-9 ms-3 d-flex justify-content-start">
                        <h5 class="fw-normal d-flex">User Master</h5>
                    </section>
                </section>
                @* add button *@
                <section class="col-2 d-flex justify-content-end align-items-center">
                    <a asp-action="AddModalUser" asp-controller="Home" class="p-2 px-5 rounded-2 border btn btn-success" type="button" name="btnAdd" value="add">Add</a>
                </section>
            </section>
            @* start row content *@
            <div class="p-2 mt-3 rounded-2" style="max-height: 580px; height:580px; border:1px solid #000;">
            @foreach (var user in Model){
                    <section class="p-3">
                        <section>
                            @* List *@
                            <section class="border border-secondary rounded-2 p-2 px-3">
                                @* profile & lastname, First Name Middle Name & Action*@
                                <section class="row border-dark rounded-2">
                                    <section class="col-1">
                                        <img src="~/img/EllipseGold.svg" alt="">
                                    </section>
                                    <section class="col-2 mt-2 pt-1 d-flex justify-content-start align-items-start">
                                        <h6 class="d-flex fs-5">@user.UserId</h6>
                                    </section>
                                    <section class="col-3 mt-2 pt-1 d-flex justify-content-start align-items-start">
                                        <h6 class="d-flex fs-5">@user.Name</h6>
                                    </section>
                                    <section class="col-4 mt-2 pt-1 d-flex justify-content-start align-items-start">
                                        <h6 class="d-flex fs-5">@user.Email</h6>
                                    </section>
                                    <section class="col justify-content-end d-flex align-items-center">
                                        <section class="d-flex align-items-center">
                                            <form asp-controller="Home" asp-action="UpdateModalUser" method="get" style="text-decoration: none;">
                                                <input type="hidden" name="Id" value="@user.Id" />
                                                <button type="submit" class="text-dark" style=" border: none;"><i class="text-dark fs-4 fa fa-pen me-2"></i></button>

                                            </form>

                                            <span class="d-flex px-2"></span>
                                            <form asp-controller="Home" asp-action="DeleteModalUser" method="post" style="text-decoration: none;">
                                                <input type="hidden" name="Id" value="@user.Id" />
                                                <button type="submit" class="text-danger" style=" border: none;"><i class="text-danger fs-4 fa fa-trash me-2"></i></button>
                                            </form>

                                        </section>
                                    </section>
                                </section>
                            </section>
                        </section>
                    </section>
            }
             </div>
        </section>
    </div>
</body>
